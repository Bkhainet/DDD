<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#FAFAFA"
    tools:context=".MainActivity">

    <!-- TextView для отображения текущего слова с крупным шрифтом и высоким контрастом -->
    <TextView
        android:id="@+id/currentWordTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Word"
        android:textSize="32sp"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- TextView для отображения результата проверки -->
    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="28sp"
        android:gravity="center"
        android:layout_marginBottom="24dp"
        android:visibility="gone" /> <!-- Скрыт по умолчанию -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progress="0"
        android:max="100" />


    <!-- Увеличенный RadioGroup с горизонтальной ориентацией для артиклей -->
    <RadioGroup
        android:id="@+id/articleRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="24dp">

        <RadioButton
            android:id="@+id/derRadioButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="der"
            android:textSize="24sp"
            android:padding="16dp" />

        <RadioButton
            android:id="@+id/dieRadioButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="die"
            android:textSize="24sp"
            android:padding="16dp" />

        <RadioButton
            android:id="@+id/dasRadioButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="das"
            android:textSize="24sp"
            android:padding="16dp" />
    </RadioGroup>

    <!-- Кнопки перевода с большим текстом и отступами -->
    <Button
        android:id="@+id/translationOption1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Перевод 1"
        android:textSize="24sp"
        android:layout_marginBottom="16dp"
        android:padding="16dp" />

    <Button
        android:id="@+id/translationOption2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Перевод 2"
        android:textSize="24sp"
        android:layout_marginBottom="16dp"
        android:padding="16dp" />

    <Button
        android:id="@+id/translationOption3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Перевод 3"
        android:textSize="24sp"
        android:layout_marginBottom="16dp"
        android:padding="16dp" />

    <Button
        android:id="@+id/translationOption4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Перевод 4"
        android:textSize="24sp"
        android:padding="16dp" />

</LinearLayout>
